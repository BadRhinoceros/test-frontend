.footer
  &__wrapper
    display flex
    flex-direction row
    align-items flex-start
    flex-wrap wrap
    @media xs
      flex-direction: column;
      align-items: center;
  &__items
    width: 285px
    padding-right: 50px
    margin-bottom: 30px
    flex-shrink: 0
    @media xs
      &:nth-child(4n)
        padding-right: 0
    @media lg
      width: 310px
      &:nth-child(3n)
        padding-right: 0
    @media md
      width: 310px
      &:nth-child(2n)
        padding-right: 0
    @media sm
      padding-right: 0
      width: 100%
    @media xs
      padding-right: 0
      width: 100%
  &__main
    font-family: $geom
    font-weight: 500
    font-size: 18px
    text-transform: uppercase
    color: #000000
    padding-bottom: 15px
  &__items--text
    font-family: $geom
    font-weight: 500
    font-size: 18px
    color: #000000
    padding-bottom: 10px
    display block
    &:last-child
      padding-bottom: 0
    &:hover,
    &:focus
      color $orange
  &__icons--wrapper
    display flex
    flex-direction row
    align-items center
    justify-content center
    padding: 40px 0
  &__icons--items
    display flex
    flex-direction row
    align-items center
    margin 0 10px
  &__icons--text
    font-family: $geom
    font-weight: 500
    font-size: 12px
    color: #000
  &__icons
    width: 30px
    height: 30px
    background-size: contain
    background-repeat: no-repeat
    background-position: center
    margin-right: 10px
  &__text--wrapper
    display flex
    flex-direction row
    align-items center
    justify-content space-between
    padding-bottom: 20px
    @media xs
      flex-direction: column
      align-items: center
  &__text--items
    display flex
    flex-direction row
    align-items center
    p
      font-family: $roboto
      font-size: 14px
      color: #00000087
    &:first-child
      text-align: left
    &:last-child
      text-align: right
      p
        padding-right: 15px
        &:last-child
          padding-right: 0
    @media xs
      flex-direction: column
      align-items: center
      padding-bottom: 20px
      p
        padding: 0 !important
      &:nth-child(1)
        padding-bottom: 20px
