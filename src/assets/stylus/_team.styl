.team
    &__wrap
        display inline-flex
        flex-wrap: wrap
        width 100%
        @media xs
            flex-direction: column
    &__item
        display inline-flex
        width: 517px
        margin-right: 106px
        margin-bottom: 30px
        // background-color: green
        &:nth-child(2n)
            margin-right: 0
        @media lg
            margin-right 40px
            width 445px
        @media md
            margin-right: 0
            width: 100%
        @media sm
            margin-right: 0
            width: 100%
        @media xs
            flex-direction: column
            align-items: center
            margin-right: 0
            width: 100%
    &__img-wrap
        display inline-flex
        flex-direction: column
        align-items: center
        justify-content: center
        position relative
        height 200px
        width: 200px
        flex-shrink: 0
        border-radius: 50%
        border 4px solid $orange
    &__img
        // Посмотреть реализацию кружков на ацино !!!
        display inline-block
        height 185px
        width 185px
        border-radius: 50%
        background-color: red
    &__txt-block
        padding-left: 30px
        padding-top: 5px
        @media xs
            text-align: center
            padding-left: 0
    &__name
        font-size: 22px
        color $orange
        font-weight: bold
    &__position,
    &__desc
        font-size: 16px
        font-family: $roboto
        // font-family: normal
        color #AAAAAA
    &__position
        margin-bottom: 15px