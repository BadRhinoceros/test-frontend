.ice-info
  position relative

  &__items
    display flex
    flex-direction row
    align-items stretch
    // margin-bottom: 40px
    @media xs-md
      flex-direction column
      align-items center

  &__img
    min-height 572px
    width 35%
    background-size: cover
    background-position: center
    background-repeat: no-repeat;
    @media xs-all
      width: 100%
      height: 320px
      min-height auto
    @media md
      width: 100%
      height: 450px
      min-height auto

  &__content
    width: 60%
    padding-left: 40px
    @media xs-md
      width: 100%
      padding-right 15px
      padding-left 15px
      margin-right auto
      margin-left auto
    @media sm
      max-width 540px
    @media md
      max-width 720px

  &__date
    font-family: $roboto
    font-size: 16px
    color: #000000
    padding-bottom: 5px
    @media xs-md
      padding-top: 18px

  &__title
    font-family: $appetite
    font-size: 22px
    color #000
    padding-bottom: 32px

  &__text
    display inline-block
    font-family: $roboto
    font-size: 16px
    color #000
    max-width 540px
    transition height 1s
    overflow hidden
    @media xs-md
      max-width 100%;
  &__text:not(.active)
    @media xs-md
      height 180px !important
      transition height 1s

  &__text > p,
  &__text > span,
  &__text > div
    font-family: $roboto
    font-size: 16px
    color #000
    margin 0
    padding-bottom: 20px
    line-height: 1.4

  &__links
    padding-top: 20px
    display flex
    flex-direction column
    align-items flex-start
    justify-content flex-start

  &__links--title
    font-family: $roboto
    font-size: 16px
    color $orange
    padding-bottom: 10px

  &__link
    font-size: 16px
    color #000
    position relative
    font-family: $roboto
    padding-bottom: 3px

    &:after
      content: ''
      border-bottom: 1px solid $orange
      width: 0
      left: 0
      position: absolute
      bottom: 0
      transition: all .3s ease-out

    &:hover,
    &:focus
      color $orange

      &:after
        width: 100%
        right: 0

  &__prev,
  &__next
    top 0
    @media xs-all
      top 240px
    @media md
      top 340px

  &__prev
    right: 140px
    @media xs-md
      right: 100px

  &__next
    right: 60px
    @media xs-md
      right: 20px

  &__btn--more
    display none
    background-color: #fff
    font-family: $geom
    font-weight: bold
    font-size: 18px
    color $orange
    border: 2px solid #FABB00
    border-radius: 37px
    padding 12px 40px
    margin 15px 0
    transition all .3s ease-out
    &:hover,
    &:focus
      background-color: $orange
      color #fff
    @media xs-md
      display block



