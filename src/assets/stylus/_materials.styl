.materials
    padding-bottom: 75px
    &__company-wrap
        display inline-flex
        flex-direction: column
        align-items: center
        width: 100%
        margin-bottom 90px
    &__company-block
        display inline-flex
        flex-direction: row
        margin-bottom: 40px
    &__company-img
        display inline-block
        height 198px
        width: 198px
        flex-shrink: 0
        border-radius: 50%
        border: 4px solid $orange
        background-image: url('../images/img/rose.png')
        background-position: 54% 50%
        background-repeat: no-repeat
    &__company-txt
        padding-left: 50px
    &__company-title
        font-family: $geom
        font-size: 18px
        text-align: center
        font-weight bold
        margin-bottom: 20px
    &__company-desc-block
        display inline-block
        width: 500px
        margin-bottom: 35px
    &__company-desc
        font-family: $roboto
        font-size: 16px;
        line-height: 22px;
        color: #AAAAAA;
    &__company-list
        margin-bottom: 25px
    &__list-title
        text-align: center
        margin-bottom: 22px
    &__list-wrap
        ul
            line-height: 44px;
        li
            list-style-type: disc
        span
            font-family: $roboto
            font-size: 16px !important
            color: #0C0C0C !important    
    &__item-wrap
        display: inline-flex
        flex-direction: row
        margin-bottom: 118px
    &__item-img
        display inline-block
        height 670px
        width: 476px
        flex-shrink: 0
        background-position: center
        background-repeat: no-repeat
        background-color: $grey
    &__item-info
        padding-left: 70px
        padding-right: 70px
    &__item-desc
        p
            font-weight: normal;
            font-size: 16px;
            line-height: 22px;
            margin-bottom: 20px
            color $grey
            &:first-child
                margin-top 20px
            &:last-child
                margin-bottom 0
        b
            color $orange
    &__item-btn
        margin-top: 100px

    &__order
        margin-bottom 100px
    &__order-wrap
        display inline-flex
        justify-content: center
        width: 100%
    &__order-list
        display inline-flex
        flex-direction: column
        width: 70%
    &__order-title
        text-align: center
    &__order-item
        display inline-flex
        align-items: center
        margin-bottom 24px
        &:last-child
            margin-bottom 0
    &__order-img
        display inline-block
        height 88px
        width 88px
        flex-shrink: 0
        background-color: red
    &__order-txt
        font-family $roboto
        color: $grey
        font-size 16px
        margin-left 32px
        b
            color $orange


    &__question-wrap
        display inline-flex
        flex-direction: column
        align-items: center
        width: 100%
    &__question-block
        display inline-flex
        width: 80%
        @media md
            width 100%
        @media sm
            width: 100%
            flex-direction: column
            align-items center
        @media xs
            width: 100%
            flex-direction: column
            align-items center
    &__question-title
        margin-bottom: 30px
        @media sm
            display: none
        @media xs
            display: none
    &__question-txt
        display: inline-flex
        width: 530px
        flex-direction: column
        align-items: center
        padding-left: 37px
        padding-top: 35px
        p
            font-family $roboto
            color $grey
            font-weight: normal;
            font-size: 16px;
        @media md
            width 100%
        @media sm
            width 100%
            padding-left: 0
        @media xs
            width 100%
            padding-left: 0
    &__question-person
        margin-bottom: 25px
        text-align: center
    &__question-name
        color: $orange !important
        font-size: 22px !important
        font-weight bold !important
    &__question-desc
        margin-bottom: 30px
        @media xs
            text-align: center
    &__question-btn
        flex-shrink: 0
